/* components/component.wxss */

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

/*对话框 */

.commodity_attr_box {
    height: 70vh;
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 30rpx;
    padding-left: 30rpx;
}

.option {
    width: 50%;
    margin: 12rpx 7rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #000;
    font-weight: normal;
    background-color: #F6F6F6;
    /* 设置一个相同宽度的边框使切换按钮时不会出现按钮大小跳动 */
    border: 1px solid #F6F6F6;
    display: inline-block;
    text-align: center;
    border-radius: 50rpx;
    font-size: 30rpx;
}

/* 选择条件按钮被选中后 */

.option.seleted {
    color: #DE554F;
    background-color: #FCF4F3;
    border: 1px solid #DE554F;
}